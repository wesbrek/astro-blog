---
import type { CollectionEntry } from "astro:content";
import MainLayout from "../../../layouts/MainLayout.astro";
import ArticleCard from "../../../components/ArticleCard.astro";
import { capitalize, getAllBlogArticlesSorted } from "../../../utils";

const { tag } = Astro.params;

if (tag === undefined) {
  throw new Error("Tag is required");
}

const allBlogArticles: CollectionEntry<"blog">[] =
  await getAllBlogArticlesSorted();

const tagArticles: CollectionEntry<"blog">[] = allBlogArticles.filter(
  (article) => article.data.tags.includes(tag),
);
---

<MainLayout title="All Articles">
  <a
    href="/articles"
    class="mb-6 inline-block bg-gray-100 p-2 hover:bg-indigo-500 hover:text-white"
    >Back To Articles</a
  >
  <h1 class="pb-3 text-2xl">#{capitalize(tag)}</h1>

  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    {tagArticles.map((article) => <ArticleCard article={article} />)}
  </div>

  <div class="mt-10 flex justify-between">
    <a
      href="#"
      class="inline-block rounded-lg bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white"
    >
      Previous
    </a>
    <a
      href="#"
      class="inline-block rounded-lg bg-indigo-100 px-3 py-2 hover:bg-indigo-600 hover:text-white"
    >
      Next
    </a>
  </div>
</MainLayout>
