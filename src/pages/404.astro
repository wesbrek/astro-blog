---
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import error from "../images/error-404.png";
---

<MainLayout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-items-center gap-7">
    <Image src={error} alt="Error 404" width={250} height={250} class="mt-10" />
    <h1 class="text-5xl">Page Not Found</h1>
    <p class="mb-10 text-2xl">
      Sorry, we couldn't find the page you were looking for
    </p>
    <a
      href="/"
      class="mb-6 inline-block bg-gray-100 p-2 hover:bg-indigo-500 hover:text-white"
      >Go Back Home</a
    >
  </div>
</MainLayout>
